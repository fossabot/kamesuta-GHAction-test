{
  "name": "www.kamesuta.com",
  "description": "KamePowerWorld Website",
  "packageManager": "yarn@3.2.0",
  "version": "1.0.0",
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all",
    "maintained node versions",
    "not dead"
  ],
  "repository": "https://github.com/KamePowerWorld/www.kamesuta.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "init": "shx rm -rf .git && git init -b main",
    "create": "exec-bin node_modules/.bin/hugo/hugo new",
    "prestart": "yarn run clean",
    "start": "exec-bin node_modules/.bin/hugo/hugo server  --bind=localhost --disableFastRender --baseURL=http://localhost",
    "start:lan": "exec-bin node_modules/.bin/hugo/hugo server --bind=localhost --baseURL=http://192.168.1.10 --port=1313",
    "start:minify": "exec-bin node_modules/.bin/hugo/hugo server --gc --minify --bind=localhost --baseURL=http://localhost",
    "prebuild": "yarn run clean",
    "build": "exec-bin node_modules/.bin/hugo/hugo --gc --minify",
    "build:lan": "exec-bin node_modules/.bin/hugo/hugo --gc --minify --baseURL=http://192.168.1.10:8080",
    "build:preview": "yarn run build -D -F",
    "clean": "shx rm -rf public resources",
    "clean:install": "shx rm -rf yarn.lock node_modules ",
    "lint": "yarn run lint:scripts && yarn run lint:styles && yarn run lint:markdown",
    "lint:scripts": "eslint assets/js config",
    "lint:styles": "stylelint --fix \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:markdown": "markdownlint-cli2 \"*.md\" \"content/**/*.md\"",
    "lint:markdown-fix": "markdownlint-cli2-fix \"*.md\" \"content/**/*.md\"",
    "server": "exec-bin node_modules/.bin/hugo/hugo server",
    "test": "yarn run lint",
    "env": "env",
    "precheck": "yarn version",
    "check": "exec-bin node_modules/.bin/hugo/hugo version",
    "latest:hugo": "gh release view --repo gohugoio/hugo",
    "latest:hyas": "gh release view --repo h-enk/hyas",
    "postinstall": "hugo-installer --version otherDependencies.hugo --extended --destination node_modules/.bin/hugo",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@popperjs/core": "^2.11.5",
    "auto-changelog": "^2.4.0",
    "autoprefixer": "^10.4.7",
    "bootstrap": "^5.1.3",
    "eslint": "^8.14.0",
    "exec-bin": "^1.0.0",
    "hugo-installer": "^3.1.0",
    "lazysizes": "^5.3.2",
    "markdownlint-cli2": "^0.4.0",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "purgecss-whitelister": "^2.4.0",
    "quicklink": "^2.2.0",
    "shx": "^0.3.4",
    "stylelint": "^14.8.1",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard-scss": "^3.0.0"
  },
  "otherDependencies": {
    "hugo": "0.98.0"
  }
}
